---

<div class="main">
  <div class="logo">
    <h1>HELLO!</h1>
    <h2>My name is</h2>
    <h1>SAKI EBINA!</h1>
  </div>
</div>
<style>
  .main{
    height:100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    line-height:50px;
  }

  .logo{ 
    text-align: center;
    color:#03005D;
    letter-spacing: 1rem;
    font-family: "Jaro", sans-serif;
  }

  .logo h1{
    font-size: 3.5rem ;
  }

  .logo h2{
    font-size: 2rem;
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  // ウィンドウがロードされた後にGSAPとScrollTriggerを読み込む

  // ScrollTriggerを登録
  gsap.registerPlugin(ScrollTrigger);

  // アニメーションの設定
  gsap.from(".logo h1:first-child", {
    scrollTrigger: {
      trigger: ".main",
      start: "top center", // スクロール位置のトリガー設定
      toggleActions: "play none none reverse", // アクションの設定
      markers: true,
    },
    opacity: 0,
    y: -50,
    duration: 1,
  });

  gsap.from(".logo h2", {
    scrollTrigger: {
      trigger: ".main",
      start: "top center",
      toggleActions: "play none none reverse",
    },
    opacity: 0,
    y: -30,
    duration: 1,
    delay: 0.5,
  });

  gsap.from(".logo h1:last-child", {
    scrollTrigger: {
      trigger: ".main",
      start: "top center",
      toggleActions: "play none none reverse",
    },
    opacity: 0,
    y: -50,
    duration: 1,
    delay: 1,
  });
</script>

