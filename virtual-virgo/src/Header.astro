<header>
  <div class="langage">
    <p class ="eng">English</p>
    <p class ="jp">日本語</p>
  </div>
</header>

<style>
  .langage{
    display:flex;
    color:#03005D;
    text-align: right;
    margin:30px;
    cursor: pointer;
  }

  .eng{
    border-right: 1px solid;
    padding-right:10px;
    color:#03005D;
    margin-right:10px;
  }

  .jp{
    text-decoration: underline;
  }
</style>

<script>
  const jpnBtn = document.querySelector('.jp')  as HTMLElement;
  const engBtn =  document.querySelector('.eng')  as HTMLElement;
  const japanese = document.querySelectorAll('.japanese') as NodeListOf<HTMLElement>; ;
  const english =  document.querySelectorAll('.english') as NodeListOf<HTMLElement>;;

    jpnBtn.addEventListener('click', () => {
  japanese.forEach((element) => {
    element.style.display = 'block'; 
  });
  english.forEach((element) => {
    element.style.display = 'none'; 
  });

  jpnBtn.style.textDecoration = 'underline';
  engBtn.style.textDecoration = 'none';

});

engBtn.addEventListener('click', () => {
  japanese.forEach((element) => {
    element.style.display = 'none';
  });
  english.forEach((element) => {
    element.style.display = 'block'; 
  });

  jpnBtn.style.textDecoration = 'none';
  engBtn.style.textDecoration = 'underline';
});
</script>